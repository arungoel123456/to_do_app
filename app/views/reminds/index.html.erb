
  <% if user_signed_in? %>
   

    <p id="new-remind"><%= link_to 'New Remind', new_remind_path %></p>


    <h1 id="all-tasks" class="headers-of-index">All Tasks</h1>
    
    <ul id="list-of-all-reminds">
      <% @reminds.each do |f| %>
        <% if f.status==true %>
          <div class="remind-list-box">  
              <li class="remind-list" >Name: <%= f.name %> </li>
              
              
              <p>Time of execution: <%= f.alarm %> </p>
              <ul id="links-of-remind">
                <li><%= link_to "show",remind_path(f.id) %></li>
                <li><%= link_to "destroy",remind_path(f.id), method: :delete %></li>
              </ul>
          </div>
          <br><br><br>
        <%end%>
      <%end%>


    </ul>

    <h1 class="headers-of-index">Tasks Pending</h1>
    <ul id="list-of-all-tasks-pending">

      <% @reminds.each do |f| %>
        <% if f.status==false%>
          <div class="remind-list-box"> 
              <li class="remind-list" >name: <%= f.name %> </li> 
              
              <p>Time of execution: <%= f.alarm %> </p>
              <ul id="links-of-remind">
                <li><%= link_to "show",remind_path(f.id) %></li>
                <li><%= link_to "destroy",remind_path(f.id), method: :delete %></li>
              </ul>
          </div>
          <br><br><br>
        <%end%>  
      <%end%>


    </ul>

  <%end%>  
